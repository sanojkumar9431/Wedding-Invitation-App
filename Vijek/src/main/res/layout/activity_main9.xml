<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/h"
    android:orientation="vertical"
    tools:context=".Main9Activity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"

        android:layout_height="70dp"
        android:text="Please Fill it"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#00f"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/n1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/a2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/r3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Relation with Bride"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/c4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="contact"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/d5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:ems="10"
        android:hint="Date when you join us"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <Button
        android:id="@+id/b9"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="Send"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.TextView" />

    <Button
        android:id="@+id/button21"
        android:layout_width="115dp"
        android:layout_height="58dp"
        android:text="Home" />

</LinearLayout>